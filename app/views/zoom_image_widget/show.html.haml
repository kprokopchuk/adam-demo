%div.animated.wow.fadeInDown{"data-wow-delay" => ".4s"}
  %img.icon{:alt => "", :src => "/assets/demo/icon3.png"}/
  %span.separator
  = scrivito_tag :h2, widget, :headline
  %p
    - if widget.image
      = link_to widget.image.preview, class: 'gallery', title: widget.image.display_title, data: { group: "group-#{widget.id}" } do
        = image_tag widget.image.thumbnail
    - else
      = scrivito_image_tag widget, :image, data: { filter_cb: "images" }